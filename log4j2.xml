<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="filename">./_log_file.log</Property>
	</Properties>
    <Appenders>
		<File name="File" fileName="${filename}">
			<PatternLayout>
				<pattern>%d [%t] %-5level %logger{36} - %msg%n</pattern>
			</PatternLayout>
		</File>
    </Appenders>
    <Loggers>
    	<Root level="error">
    		<AppenderRef ref="File"/>
    	</Root>
    	<Logger name="MarketDataDownloader" level="trace" additivity="false">
    		<AppenderRef ref="File"/>
    	</Logger>
    	<Logger name="DownloadThread" level="info" additivity="false">
    		<AppenderRef ref="File"/>
    	</Logger>
    </Loggers>
</Configuration>