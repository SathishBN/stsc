<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>stsc</groupId>
  <artifactId>Stsc</artifactId>
  <version>0.0.6-MORE-GENEROUS-NUMBER-PARSING-ON-DOUNLOAD</version>
  <packaging>jar</packaging>

  <name>Stsc</name>
  <url>https://github.com/sidorovis/MarketDataDownloader</url>

  <properties>
    <project.build.sourceEncoding>Cp1251</project.build.sourceEncoding>
  </properties>

  <build>
	<defaultGoal>install</defaultGoal>

	<plugins>
	<plugin>
 	<groupId>org.apache.maven.plugins</groupId>
 	<artifactId>maven-eclipse-plugin</artifactId>
	<version>2.8</version>

  	<executions>

    <execution>
      <id>stsc-common</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/main/java/stsc/common</schemaDirectory>
        <generatePackage>stsc.common</generatePackage>
        <generateDirectory>${project.build.directory}/target/classes/stsc/common</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-yahoo-fetcher</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/main/java/stsc/yahoofetcher</schemaDirectory>
        <generatePackage>stsc.yahoofetcher</generatePackage>
        <generateDirectory>${project.build.directory}/target/classes/stsc/yahoofetcher</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-liquiditator</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/main/java/stsc/liquiditator</schemaDirectory>
        <generatePackage>stsc.liquiditator</generatePackage>
        <generateDirectory>${project.build.directory}/target/classes/stsc/liquiditator</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-storage</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/main/java/stsc/storage</schemaDirectory>
        <generatePackage>stsc.storage</generatePackage>
        <generateDirectory>${project.build.directory}/target/classes/stsc/storage</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-algorithms</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/main/java/stsc/algorithms</schemaDirectory>
        <generatePackage>stsc.algorithms</generatePackage>
        <generateDirectory>${project.build.directory}/target/classes/stsc/algorithms</generateDirectory>
      </configuration>
    </execution>
     <execution>
      <id>stsc-algorithms-primitive</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/main/java/stsc/algorithms/primitive</schemaDirectory>
        <generatePackage>stsc.algorithms.primitive</generatePackage>
        <generateDirectory>${project.build.directory}/target/classes/stsc/algorithms/primitive</generateDirectory>
      </configuration>
    </execution>
   <execution>
      <id>stsc-trading</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/main/java/stsc/trading</schemaDirectory>
        <generatePackage>stsc.trading</generatePackage>
        <generateDirectory>${project.build.directory}/target/classes/stsc/trading</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-statistic</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/main/java/stsc/statistic</schemaDirectory>
        <generatePackage>stsc.statistic</generatePackage>
        <generateDirectory>${project.build.directory}/target/classes/stsc/statistic</generateDirectory>
      </configuration>
    </execution>

    <execution>
      <id>stsc-common-tests</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/test/java/stsc/common</schemaDirectory>
        <generatePackage>stsc.common</generatePackage>
        <generateDirectory>${project.build.directory}/target/test-classes/stsc/common</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-yahoo-fetcher-tests</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/test/java/stsc/yahoofetcher</schemaDirectory>
        <generatePackage>stsc.yahoofetcher</generatePackage>
        <generateDirectory>${project.build.directory}/target/test-classes/stsc/yahoofetcher</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-liquiditator-tests</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/test/java/stsc/liquiditator</schemaDirectory>
        <generatePackage>stsc.liquiditator</generatePackage>
        <generateDirectory>${project.build.directory}/target/test-classes/stsc/liquiditator</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-storage-tests</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/test/java/stsc/storage</schemaDirectory>
        <generatePackage>stsc.storage</generatePackage>
        <generateDirectory>${project.build.directory}/target/test-classes/stsc/storage</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-algorithms-tests</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/test/java/stsc/algorithms</schemaDirectory>
        <generatePackage>stsc.algorithms</generatePackage>
        <generateDirectory>${project.build.directory}/target/test-classes/stsc/algorithms</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-algorithms-primitive-tests</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/test/java/stsc/algorithms/primitive</schemaDirectory>
        <generatePackage>stsc.algorithms.primitive</generatePackage>
        <generateDirectory>${project.build.directory}/target/test-classes/stsc/algorithms/primitive</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-trading-tests</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/test/java/stsc/trading</schemaDirectory>
        <generatePackage>stsc.trading</generatePackage>
        <generateDirectory>${project.build.directory}/target/test-classes/stsc/trading</generateDirectory>
      </configuration>
    </execution>
    <execution>
      <id>stsc-statistic-tests</id>
      <goals>
        <goal>eclipse</goal>
      </goals>
      <configuration>
        <schemaDirectory>src/test/java/stsc/statistic</schemaDirectory>
        <generatePackage>stsc.statistic</generatePackage>
        <generateDirectory>${project.build.directory}/target/test-classes/stsc/statistic</generateDirectory>
      </configuration>
    </execution>

  	</executions>

	</plugin>
	<plugin>
   		<artifactId>maven-compiler-plugin</artifactId>
   		<version>2.0.2</version>
   		<configuration>
       		<source>1.7</source>
       		<target>1.7</target>
   		</configuration>
	</plugin>
	<plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
        	<descriptorRefs>
        		<descriptorRef>jar-with-dependencies</descriptorRef>
            </descriptorRefs>
     		<archive>
        		<manifest>
          			<mainClass>stsc.yahoofetcher.MarketDataDownloader</mainClass>
        		</manifest>
      		</archive>
        </configuration>
    	<executions>
      		<execution>
        		<id>make-yahoofetcher-jar-with-dependencies</id>
        		<phase>package</phase>
        		<goals>
          			<goal>single</goal>
        		</goals>
      		</execution>
    	</executions>
    </plugin>
	</plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
	<dependency>
    	<groupId>com.google.guava</groupId>
    	<artifactId>guava</artifactId>
    	<version>16.0</version>
	</dependency>
	<dependency>
		<groupId>org.apache.logging.log4j</groupId>
		<artifactId>log4j-api</artifactId>
		<version>2.0-beta9</version>
	</dependency>
	<dependency>
		<groupId>org.apache.logging.log4j</groupId>
		<artifactId>log4j-core</artifactId>
		<version>2.0-beta9</version>
	</dependency>
	<dependency>
		<groupId>joda-time</groupId>
		<artifactId>joda-time</artifactId>
		<version>2.3</version>
	</dependency>            

  </dependencies>
  <description>Stsc is a bunch of classes for automatic trading strategy generating.</description>
</project>
